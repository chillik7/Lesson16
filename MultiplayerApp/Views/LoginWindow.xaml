<Window x:Class="MultiplayerApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="400">
    <Grid>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="200" />
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Width="200" />
        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="20,100,0,0" Click="OnLoginClick"/>
    </Grid>
</Window>
